{% extends 'base.html.twig' %}

{% block title %} Registration {% endblock %}
{% block body %}

<!-- Page container -->
<div class="page-container login-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Content area -->
            <div class="content">

                <!-- Advanced login -->
                {{ form_start(form, {'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal fos_user_registration_register'}}) }}

                    <div class="panel panel-body login-form">
                        <div class="text-center">
                            <div class="icon-object border-success text-success"><i class="icon-plus3"></i></div>
                            <h5 class="content-group">Create account <small class="display-block">All fields are required</small></h5>
                        </div>

                        <div class="content-divider text-muted form-group"><span>Your credentials</span></div>

                        <div class="form-group has-feedback has-feedback-left">
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Firstname'}}) }}
                            <div class="form-control-feedback">
                                <i class="icon-user-check text-muted"></i>
                            </div>
                            {{ form_errors(form.firstname) }}
                        </div>

                        <div class="form-group has-feedback has-feedback-left">
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Lastname'}}) }}
                            <div class="form-control-feedback">
                                <i class="icon-user-lock text-muted"></i>
                            </div>
                            {{ form_errors(form.lastname) }}
                        </div>

                        <div class="content-divider text-muted form-group"><span></span></div>

                        <div class="form-group has-feedback has-feedback-left">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                            <div class="form-control-feedback">
                                <i class="icon-mention text-muted"></i>
                            </div>
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="form-group has-feedback has-feedback-left">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
                            <div class="form-control-feedback">
                                <i class="icon-mention text-muted"></i>
                            </div>
                            {{ form_errors(form.username) }}
                        </div>

                        <div class="form-group has-feedback has-feedback-left">
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                            <div class="form-control-feedback">
                                <i class="icon-mention text-muted"></i>
                            </div>
                            {{ form_errors(form.plainPassword.first) }}
                        </div>

                        <div class="form-group has-feedback has-feedback-left">
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm Password'}}) }}
                            <div class="form-control-feedback">
                                <i class="icon-mention text-muted"></i>
                            </div>
                            {{ form_errors(form.plainPassword.second) }}
                        </div>

                        <div class="content-divider text-muted form-group"><span></span></div>
                        <button type="submit" class="btn bg-teal btn-block btn-lg">Register</button>
                    </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
                {{ form_errors(form) }}
                <!-- /advanced login -->

                {% include 'IndexBundle::footer.html.twig' %}

            </div>
            <!-- /content area -->

        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->
{% endblock %}